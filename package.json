{
  "name": "mern-app",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "build": "npm install && npm install --prefix frontend && npm run build --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon backend/server.js",
    "client": "npm start --prefix frontend",
    "start": "npm run build && NODE_ENV=production node backend/server.js"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.3.6",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "concurrently": "^7.0.0"
  }
}
